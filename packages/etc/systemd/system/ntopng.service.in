[Unit]
Description=ntopng high-speed web-based traffic monitoring and analysis tool
After=@SERVICE_AFTER@
Wants=@SERVICE_REQUIRES@

[Service]
Type=simple
ExecStartPre=/bin/sh -c '/bin/sed "/^[ \t]*-e$\\|^[ \t]*-G.*\\|^[ \t]*--daemon.*\\|^[ \t]*--pid.*/s/^/#/" /etc/ntopng/ntopng.conf > /run/ntopng.conf'
ExecStart=/usr/local/bin/ntopng /run/ntopng.conf
ExecStopPost=-/bin/rm -rf /run/ntopng.conf
Restart=on-abnormal
RestartSec=5

[Install]
WantedBy=multi-user.target
Alias=@SERVICE_ALIAS@
