
<div class="d-flex">
    <select class="form-select" id="iface-select">
        <optgroup label="{{ i18n("interfaces") }}">
        {% for _, interface in ipairs(ifaces) do %}
            <option {{ (interface.is_selected and 'selected' or '') }}>
                {{ interface.human_name }}
            </option>
        {% end %}
        </optgroup>
    </select>
</div>